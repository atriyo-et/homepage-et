        <div class="copyright text-center p-2">
            Â© {{ date()|date('Y') }} Copyright: <a class="text-dark" href="{{ url('home') }}">EinzigTech</a>
        </div>
    </footer>
{% endblock %}

{% block footerJs %}
    <script defer type="text/javascript" src="{{ asset('js/script.js') }}"></script>
{% endblock %}

</body>
</html>
