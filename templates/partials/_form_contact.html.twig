{{ form_start(form, {'attr': {'id': 'contact_us'}}) }}
<div class="row">
    <div class="col-lg-6 mb-4">
        {{ form_widget(form.name) }}
    </div>
    <div class="col-6 mb-4">
        {{ form_widget(form.contactEmail) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-12 mb-4">
        {{ form_widget(form.subject) }}
    </div>
</div>
<div class="row">
    <div class="col-12 mb-4">
        {{ form_widget(form.message) }}
    </div>
</div>
<div class="row">
    <div class="col-12 mb-4 text-center">
        <div class="g-recaptcha" data-sitekey="{{ reCaptcha_key }}" style="display: inline-block;"></div>
    </div>
</div>
{{ form_widget(form._token) }}
<button class="w-100 btn bg-warning text-dark fs-4 fw-bold mb-5" type="submit">{{ 'contact_us.form.submit'|trans }}</button>
{{ form_end(form) }}